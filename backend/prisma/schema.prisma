generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  role        Role
  category    String?  // only for workers
  refreshToken String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  complaints        Complaint[] @relation("StudentComplaints")
  assignedTasks     Complaint[] @relation("WorkerAssignments")
  feedbacks        Feedback[]   @relation("StudentFeedbacks")
}

enum Role {
  STUDENT
  STAFF
  WORKER
  WARDEN
}

model Complaint {
  id            String   @id @default(uuid())
  title         String
  description   String
  category      Category
  location      String
  status        Status @default(PENDING)
  imageUrl      String?
  
  studentId     String
  student       User @relation("StudentComplaints", fields:[studentId], references:[id])

  assignedToId  String?
  assignedTo    User? @relation("WorkerAssignments", fields:[assignedToId], references:[id])

  feedback      Feedback?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Category {
  ELECTRICAL
  PLUMBING
  HOUSEKEEPING
  INTERNET
  FURNITURE
  OTHER
}


enum Status {
  IN_PROGRESS
  PENDING
  RESOLVED
  REOPENED
}

model Feedback {
  id           String   @id @default(uuid())
  rating       Int      // 1 to 5
  comment      String?
  studentId     String
  student       User @relation("StudentFeedbacks", fields:[studentId], references:[id])
  complaintId  String   @unique
  complaint    Complaint @relation(fields:[complaintId], references:[id])
}
